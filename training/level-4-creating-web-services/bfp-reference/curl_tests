GET /api/v1/friends
    curl http://127.0.0.1:5000/api/v1/friends

POST /api/v1/friends
    Valid
        curl 127.0.0.1:5000/api/v1/friends -X POST -H "content-type:application/json" -d '{"id":"dDuck", "firstName": "Donald", "lastName": "Duck", "telephone": "i-love-ducks", "email": "donald@disney.com", "notes": "A grumpy, easily agitated duck."}'

    No Content-Type Header
        curl 127.0.0.1:5000/api/v1/friends -X POST -d '{"id":"dDuck", "firstName": "Donald", "lastName": "Duck", "telephone": "i-love-ducks", "email": "donald@disney.com", "notes": "A grumpy, easily agitated duck."}'

    Invalid JSON Syntax
        curl 127.0.0.1:5000/api/v1/friends -X POST -H "content-type:application/json" -d '{"id":"dDuck" "firstName": "Donald", "lastName": "Duck", "telephone": "i-love-ducks", "email": "donald@disney.com", "notes": "A grumpy, easily agitated duck."}'

    Missing JSON Element
        curl 127.0.0.1:5000/api/v1/friends -X POST -H "content-type:application/json" -d '{"firstName": "Donald", "lastName": "Duck", "telephone": "i-love-ducks", "email": "donald@disney.com", "notes": "A grumpy, easily agitated duck."}'

GET /api/v1/friends/<id>

PUT /api/v1/friends/<id>
    Valid
        curl 127.0.0.1:5000/api/v1/friends/bfp -X PUT -H "content-type:application/json" -d '{"id":"bfp", "firstName": "Really Really Fat", "lastName": "Panda", "telephone": "i-love-tacos", "email": "mike@eikonomega.com", "notes": "A Panda.  Getting fatter pound at a time."}'

    No Content Type
        curl 127.0.0.1:5000/api/v1/friends/bfp -X PUT -d '{"id":"bfp", "firstName": "Really Really Fat", "lastName": "Panda", "telephone": "i-love-tacos", "email": "mike@eikonomega.com", "notes": "A Panda.  Getting fatter pound at a time."}'

    Syntax Error in JSON
        curl 127.0.0.1:5000/api/v1/friends/bfp -X PUT -H "content-type:application/json" -d '{"id":"bfp", "firstName": "Really Really Fat" "lastName": "Panda", "telephone": "i-love-tacos", "email": "mike@eikonomega.com", "notes": "A Panda.  Getting fatter pound at a time."}'

    Missing JSON Element
        curl 127.0.0.1:5000/api/v1/friends/bfp -X PUT -H "content-type:application/json" -d '{"id":"bfp", "firstName": "Really Really Fat", "telephone": "i-love-tacos", "email": "mike@eikonomega.com", "notes": "A Panda.  Getting fatter pound at a time."}'

DELETE /api/v1/friends/<id>
    Valid
        curl http://127.0.0.1:5000/api/v1/friends/dduck -X DELETE
    Non-Existent Friend
        curl http://127.0.0.1:5000/api/v1/friends/nobody -X DELETE